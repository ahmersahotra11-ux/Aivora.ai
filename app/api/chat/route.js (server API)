import { NextResponse } from 'next/server';
import OpenAI from 'openai';
import { query } from '../../../lib/db';

const client = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

export async function POST(req) {
  try {
    const { message, mode = 'balanced', model = 'gpt-4o-mini', deepThink = false } = await req.json();

    if (!message) {
      return NextResponse.json({ error: 'No message' }, { status: 400 });
    }

    // Save user message to DB
    await query('INSERT INTO messages (text, sender, meta) VALUES ($1, $2, $3)', [
      message,
      'user',
      JSON.stringify({ mode, model, deepThink })
    ]);

    // System prompt changes if deepThink
    const systemPrompt = deepThink
      ? 'You are DeepThink: provide detailed step-by-step reasoning and explain the chain of thought when answering.'
      : 'You are a helpful assistant. Answer clearly and concisely unless asked for more detail.';

    // Call OpenAI Chat Completion
    const response = await client.chat.completions.create({
      model,
      messages: [
        { role: 'system', content: systemPrompt },
        { role: 'user', content: message }
      ],
      max_tokens: 800
    });

    const reply = response.choices?.[0]?.message?.content ?? 'Sorry, I could not generate a response.';

    // Save bot reply to DB
    await query('INSERT INTO messages (text, sender, meta) VALUES ($1, $2, $3)', [
      reply,
      'bot',
      JSON.stringify({ model, deepThink })
    ]);

    return NextResponse.json({ reply });
  } catch (err) {
    console.error('API chat error:', err);
    return NextResponse.json({ error: 'Server error' }, { status: 500 });
  }
}
